<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:background="@drawable/background_card"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pkmmte.view.CircularImageView
                android:id="@+id/user_post_avatar"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="top|left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/google_default_profile_image"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="top">

                <TextView
                    android:id="@+id/user_post_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textStyle="bold"
                    android:textColor="@color/background_floating_material_dark"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"/>

                <TextView
                    android:id="@+id/user_post_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textStyle="italic"
                    android:textColor="@color/background_floating_material_dark"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="top|right"
                    android:gravity="right"
                    android:textSize="12dp"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto del post"
                android:textColor="@color/background_floating_material_dark"
                android:layout_marginLeft="10dp"/>

            <es.uma.inftel.eyemandroid.widget.ResizableImageView
                android:id="@+id/user_post_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Imagen"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>

